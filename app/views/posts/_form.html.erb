<%= simple_form_for(@post, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h4>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :timeline, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.collection_select(:timeline_id, Timeline.where(user: current_user), :id, :headline, {}, :class => "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :headline, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :headline, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :text, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :text, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <div class="input-group">
					<span class="input-group-btn">
						<span class="btn btn-primary btn-file">
							Browseâ€¦<%= f.input :image, as: :file, label: false, error: false %>
						</span>
					</span>
        <input type="text" class="form-control" readonly="">
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :caption, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :caption, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
