<div class="page-header">
  <%= link_to :back, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-arrow-left"></span>
    Back
  <% end %>
  <%= link_to edit_supplement_path(@supplement), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1><%= @supplement.title %></h1>
</div>

<div class="container">
  <div class="thumbnail col-lg-2">
    <%= image_tag(@supplement.image_url) %>
  </div>
  <div class="col-lg-10">
    <h3>Nutritional Information</h3>
    <table class="table">
      <tr><th>Name</th><th>Qty</th><th>%RDI</th></tr>
    <%- @supplement.nutritional_items.each do |nutritional_item| %>
       <tr>
         <td><%= nutritional_item.ingredient.name %> </td>
         <td><%= nutritional_item.quantity %> <%= nutritional_item.unit %></td>
         <td><%= nutritional_item.rdi %></td>
       </tr>
    <%- end %>
    </table>
  </div>


</div>


