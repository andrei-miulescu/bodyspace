<%= simple_form_for(@timeline, :html => { :class => "form-horizontal" }) do |f| %>
  <% if @timeline.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@timeline.errors.count, "error") %> prohibited this timeline from being saved:</h4>

      <ul>
      <% @timeline.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :headline, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :headline, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :text, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_area :text, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :media, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :media, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :type, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.select :type, ['default'], {}, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :thumbnail, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :thumbnail, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :caption, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :caption, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
