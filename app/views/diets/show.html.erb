<div class="page-header">
  <%= link_to :back, :class => 'btn btn-default' do %>
    <span class="glyphicon glyphicon-arrow-left"></span>
    Back
  <% end %>
  <%= link_to edit_diet_path(@diet), :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show diet</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @diet.title %></dd>

  <dt>Start date:</dt>
  <dd><%= @diet.start_date %></dd>

  <dt>Goal:</dt>
  <dd><%= @diet.goal %></dd>

</dl>

<h3>Supplements</h3>

<div class="container">
  <div id="error-add-supplement" class="col-lg-7 pull-left alert hidden">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <p class="message"></p>
  </div>

  <div class="input-group col-lg-5 pull-right">
    <input type="Search" placeholder="Search..." class="form-control" id="supplement-search-input"/>

    <div class="input-group-btn">
      <button class="btn btn-info" id="supplement-search-button">
        <span class="glyphicon glyphicon-search"></span>
      </button>
    </div>
  </div>
</div>

<div id="supplement-search-results" class="container">
  <div class="row" data-diet-id="<%= @diet.id %>">
  </div>
</div>

