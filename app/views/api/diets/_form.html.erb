<%= simple_form_for(@diet, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @diet.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h4><%= pluralize(@diet.errors.count, "error") %> prohibited this diet from being saved:</h4>

      <ul>
        <% @diet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :start_date, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.date_select :start_date, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :goal, :class => "col-lg-2 control-label" %>
    <div class="col-lg-10">
      <%= f.text_field :goal, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.button :submit, :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
