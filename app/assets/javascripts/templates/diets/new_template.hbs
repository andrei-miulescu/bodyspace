<div class="page-header">
  <button {{action goBack}} class="btn btn-default"><i class="glyphicon glyphicon-arrow-left"></i> Back</button>
  <h1>New diet</h1>
</div>
{{#if errorMsg}}
  <div class="alert alert-danger">
    {{errorMsg}}
  </div>
{{/if}}

<form {{action save on="submit"}} class="form-horizontal">
  <div class="form-group">
    <label for="headline" class="col-sm-2 control-label">Title</label>
    <div class="col-sm-10">
      {{view Em.TextField valueBinding="title" id="title" action="newDiet" class="form-control" placeholder="Title" required="true"}}
    </div>
  </div>

  <div class="form-group">
    <label for="text" class="col-sm-2 control-label">Goal</label>
    <div class="col-sm-10">
      {{view Em.TextField valueBinding="goal" id="goal" action="newDiet" class="form-control" placeholder="Lose weight, gain muscle" required="true"}}
    </div>
  </div>

  <div class="form-group">
    <label for="caption" class="col-sm-2 control-label">Start date</label>
    <div class="col-sm-10">
      {{view App.ComponentsDatePickerField dateBinding="startDate" id="startDate" class="form-control" placeholder="Start Date" required="true"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-default" value="Create diet" />
    </div>
  </div>
</form>