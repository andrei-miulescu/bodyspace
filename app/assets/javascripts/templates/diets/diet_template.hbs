
<div class="page-header">
    {{#linkTo 'diet' id class="pull-right"}}<button class="btn btn-default"><span class="glyphicon glyphicon-pencil"></span> Edit diet</button>{{/linkTo}}
    <h1>{{title}}</h1>
</div>


<ul class="nav nav-tabs">
  <li class="active"><a href="#supplements-tab" data-toggle="tab">Supplements
    <span id="supplement-count" class="label label-default">{{supplementCount}}</span></a></li>
  <li><a href="#nutritional" data-toggle="tab">Nutritional Info <span id="nutrition-count" class="label label-default">23</span></a></li>
</ul>

<div class="tab-content">
  <div class="tab-pane active" id="supplements-tab">
    <div class="thumbnail-noconflict" style="border-top: none; min-height: 600px; border-radius: 0 0 4px 4px">
      <div class="container" style="margin-top: 20px;">
        <ul id="carousel" class="elastislide-list">
          {{#each supplements}}
          <li style="border: 1px solid #dddddd; border-radius: 4px; margin-left: 10px;">
            {{#linkTo 'diet' id}}
            <img {{bindAttr src="imageUrl"}} style='height: 150px; width: 100px; margin: 0px 50px 30px 50px;'/>
            <p style="position: absolute; bottom: 0px; margin-left: 5px; font-size: 90%;">{{title}}</p>
            {{/linkTo}}
              </li>
          {{/each}}
        </ul>
      </div>
      <div class="container">
        <h3>Add Supplements</h3>

        <div class="container">
          <div id="error-add-supplement"></div>
          <div class="input-group col-lg-5 pull-right">
            <input type="Search" placeholder="Search..." class="form-control" id="supplement-search-input"/>

            <div class="input-group-btn">
              <button class="btn btn-info" id="supplement-search-button">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </div>
          </div>
        </div>
        <div id="supplement-search-results" class="container">
          <div class="row" data-diet-id="{{id}}">
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="tab-pane" id="nutritional">
