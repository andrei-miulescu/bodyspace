<div class="container" style="margin-top: 20px;">
  <ul id="carousel" class="elastislide-list">
    {{#each supplements}}
      <li style="border: 1px solid #dddddd; border-radius: 4px; margin-left: 10px;">
        {{#linkTo 'supplement' id}}
          <img {{bindAttr src="imageUrl"}} style='height: 150px; width: 100px; margin: 0px 50px 30px 50px;'/>
          <p style="position: absolute; bottom: 0px; margin-left: 5px; font-size: 90%;">{{formattedTitle}}</p>
        {{/linkTo}}
      </li>
    {{else}}
      <li><h4>No supplements found. Try searching for some to add.</h4></li>
    {{/each}}
  </ul>
</div>