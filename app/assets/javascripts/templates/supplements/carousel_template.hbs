<div class="container">
  <h3>My supplements</h3>
  <div class="container" style="margin-top: 20px;">
    <ul class="row">
      {{#each supplements}}
        <li class="col-sm-2 thumbnail-noconflict" style="margin: 3px; height:190px;">
          {{#link-to-animated 'supplement' id animations="main:flip"}}
            <img {{bindAttr src="imageUrl"}} style='height: 130px; width: 100px;'/>

            <p>{{title}}</p>
          {{/link-to-animated}}
        </li>
      {{else}}
        <h4>No supplements found. Try searching for some to add.</h4>
      {{/each}}
    </ul>
  </div>
</div>