<div class="container">
  <form class="input-group col-sm-6" {{action 'searchExercises' searchTerm on="submit"}} >
    {{view Ember.TextField valueBinding="searchTerm" placeholder="Search exercises..." class="form-control"}}

    <div class="input-group-btn">
      <button type="submit" class="btn btn-info ladda-button" data-style="zoom-in">
        <span class="ladda-label glyphicon glyphicon-search"> Search</span></button>
    </div>
  </form>
</div>


<div class="container" style="margin-top: 30px">
  <table class="table table-striped ">

    {{#each exercise in exercisesResults}}
      <tr>
        <td> {{exercise.name}}</td>
        <td><button class="btn btn-default ladda-button trigger-ladda" data-spinner-color="black" data-style="zoom-in" {{action viewExercise exercise.url}}>
          <span class="ladda-label"> View exercise</span>
        </button></td>
        <td>
          <button type="submit" class="btn btn-default ladda-button" data-style="zoom-in" {{action addExercise exercise.url this}}>
            <span class="ladda-label"> Add exercise</span></button>
        </td>
      </tr>

    {{/each}}
  </table>
</div>

