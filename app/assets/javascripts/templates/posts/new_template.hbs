<h2>New post</h2>
{{#if errorMsg}}
  <div class="alert alert-danger">
    {{errorMsg}}
  </div>
{{/if}}

{{view App.ComponentsUploadFileView action="posts/create_with_image" }}
<br/>

<form {{action save on="submit"}} class="form-horizontal">
  <div class="form-group">
    <label for="headline" class="col-sm-2 control-label">Headline</label>
    <div class="col-sm-10">
      {{view Em.TextField valueBinding="headline" id="headline" action="newPost" class="form-control" placeholder="Headline" required="true"}}
    </div>
  </div>

  <div class="form-group">
    <label for="text" class="col-sm-2 control-label">Text</label>
    <div class="col-sm-10">
      {{view Em.TextArea valueBinding="text" id="text" action="newPost" class="form-control" placeholder="Text" required="true"}}
    </div>
  </div>

  <div class="form-group">
    <label for="caption" class="col-sm-2 control-label">Weight</label>
    <div class="col-sm-10">
      {{view Ember.TextField valueBinding="caption" type="text" id="caption" class="form-control" placeholder="Weight" required="true"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" class="btn btn-default" value="Create post" />
    </div>
  </div>
</form>