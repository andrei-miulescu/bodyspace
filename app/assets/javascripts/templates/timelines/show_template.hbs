<div class="pull-left col-lg-4 ">
{{view App.TimelinesSelectView viewName="select"
    contentBinding="timelines"
    optionLabelPath="content.headline"
    optionValuePath="content.id"
    class="form-control"
    selectionBinding="App.timelineController.timelineSelection"
    }}
</div>

<div class="col-lg-8 pull-right">
  {{#linkTo 'posts.new'}}<button class="btn btn-default">New post</button>{{/linkTo}}
</div>

<div class="container">
  {{ view App.TimelinesWidgetView id="timeline" }}
</div>