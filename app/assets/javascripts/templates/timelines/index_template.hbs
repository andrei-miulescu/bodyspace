<div class="page-header">
  {{#linkTo 'timelines.new' class="pull-right"}}
    <button class="btn btn-default">New timeline</button>
  {{/linkTo}}
  <h1>Timelines</h1>
</div>
<div class="container">
  <div class="row">
    {{#each model}}
    <div class="col-sm-4" style="margin-top: 10px">
      {{#link-to 'timeline' id}}
          <div class="thumbnail-noconflict">
            <div class="image-container">
              <img {{bindAttr src="image"}} alt="{{caption}}" height="150" width="300"/>
            </div>
            <h3> {{headline}} <span class="label label-default">{{postsCount}} posts</span></h3>

            <p>
              {{#linkTo 'posts.new' id class="pull-right"}}
                <button class="btn btn-default">New post</button>
              {{/linkTo}}
            </p>
            <div style="clear:both"></div>
          </div>
      {{/link-to}}
    </div>
    {{/each}}
  </div>
</div>



